{
  "name": "ansi-stream-parser",
  "version": "0.0.1",
  "description": "A parser for ANSI escape sequence text (SGR) that works on streaming/partial input",
  "keywords": [
    "ansi",
    "escape",
    "color",
    "terminal",
    "parser",
    "streaming",
    "sgr",
    "256-color",
    "rgb"
  ],
  "author": "danneu",
  "homepage": "https://github.com/danneu/ansi-stream-parser",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danneu/ansi-stream-parser.git"
  },
  "bugs": {
    "url": "https://github.com/danneu/ansi-stream-parser/issues"
  },
  "sideEffects": false,
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./color": "./src/color.ts"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "check": "tsc --noEmit -p tsconfig.node.json",
    "test": "node --test --import tsx test/**/*.test.ts",
    "test:watch": "node --test --watch --import tsx test/**/*.test.ts",
    "lint": "eslint src test",
    "prepublishOnly": "npm run check && npm run lint && npm run test"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.15.30",
    "eslint": "^9.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.0.0"
  }
}
